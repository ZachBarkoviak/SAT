@model IEnumerable<SAT.DATA.EF.Models.Course>

@{
    ViewData["Title"] = "Home | Courses";
}

<h1>SoR Courses</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
{
    <p>
        <a asp-action="Create">Add New Course</a>
    </p>
}
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curriculum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curriculum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.CourseId">Course Details</a> |
                    @if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
                    {
                        <a class="text-danger" asp-action="Edit" asp-route-id="@item.CourseId">Edit | </a>
                        <a class="text-danger" asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
