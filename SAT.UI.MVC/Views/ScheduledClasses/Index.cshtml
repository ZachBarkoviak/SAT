@model IEnumerable<SAT.DATA.EF.Models.ScheduledClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
{
    <p>
        <a asp-action="Create">Add New Course</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InscructorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InscructorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Scs.Scsname)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ScheduledClassId">Details</a> |
                    @if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
                    {
                        <a class="text-danger" asp-action="Edit" asp-route-id="@item.ScheduledClassId">Edit | </a>
                        <a class="text-danger" asp-action="Delete" asp-route-id="@item.ScheduledClassId">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
