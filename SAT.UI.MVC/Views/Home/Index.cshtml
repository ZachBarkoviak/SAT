@{
    ViewData["Title"] = "Home Page";
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex justify-content-center align-items-center">
    <div class="container position-relative" data-aos="zoom-in" data-aos-delay="100">
        <h1>School of Rock</h1>
        <h2>We are team of talented designers making websites with Bootstrap</h2>
        <a href="@Url.Action("Contact", "Home")" class="btn-get-started">Get Started</a>
    </div>
</section><!-- End Hero -->

<main id="main">

    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container" data-aos="fade-up">

            <div class="row">
                <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-left" data-aos-delay="100">
                    <img src="~/assets/img/school1.jpg" class="img-fluid" alt="">
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content">
                    <h3>Attending will be very beneficial to your Music Career</h3>
                    <p class="fst-italic">
                        From Talent Agency Scouts to hand on learning, SoR has it all!
                    </p>
                    <ul>
                        <li><i class="bi bi-check-circle"></i> Scout comes once a year to watch our performances</li>
                        <li><i class="bi bi-check-circle"></i> 24/7 Tutoring Help</li>
                        <li><i class="bi bi-check-circle"></i> Dorms with practice rooms on each floor</li>
                    </ul>
                    <p>
                        <strong>Our Goal</strong> is to help students like you succeed.
                    </p>

                </div>
            </div>

        </div>
    </section><!-- End About Section -->
    <!-- ======= Counts Section ======= -->
    <section id="counts" class="counts section-bg">
        <div class="container">

            <div class="row counters">

                <div class="col-lg-3 col-6 text-center">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.Students" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Students</p>
                </div>

                <div class="col-lg-3 col-6 text-center">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.Courses" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Courses</p>
                </div>

                <div class="col-lg-3 col-6 text-center">
                    <span data-purecounter-start="0" data-purecounter-end="42" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Events</p>
                </div>

                <div class="col-lg-3 col-6 text-center">
                    <span data-purecounter-start="0" data-purecounter-end="7" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Trainers</p>
                </div>

            </div>

        </div>
    </section><!-- End Counts Section -->
    <!-- ======= Why Us Section ======= -->
    <section id="why-us" class="why-us">
        <div class="container" data-aos="fade-up">

            <div class="row">
                <div class="col-lg-4 d-flex align-items-stretch">
                    <div class="content">
                        <h3>Why Choose School of Rock?</h3>
                        <p>
                            We are a <strong>Top 5</strong> University in the USA as of 2022, with the best of the best teachers and tutors to help students succeed in their education. We go above and beyond the necessary to make our campus feel like a home.
                        </p>
                        <div class="text-center">
                            <a href="@Url.Action("About", "Home")" class="more-btn">Learn More <i class="bx bx-chevron-right"></i></a>
                            
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                    <div class="icon-boxes d-flex flex-column justify-content-center">
                        <div class="row">
                            <div class="col-xl-4 d-flex align-items-stretch">
                                <div class="icon-box mt-4 mt-xl-0">
                                    <i class="bx bx-receipt"></i>
                                    <h4>Courses</h4>
                                    <p>Multiple areas of study in the Music Industry are offered here with skilled professors, both in terms of teaching and the area of study</p>
                                </div>
                            </div>
                            <div class="col-xl-4 d-flex align-items-stretch">
                                <div class="icon-box mt-4 mt-xl-0">
                                    <i class="bx bx-cube-alt"></i>
                                    <h4>After Class Help</h4>
                                    <p>We have tutoring available 24/7, between our on-campus tutor and Professors, along with Musicians around the world willing to help with questions and guidance</p>
                                </div>
                            </div>
                            <div class="col-xl-4 d-flex align-items-stretch">
                                <div class="icon-box mt-4 mt-xl-0">
                                    <i class="bx bx-images"></i>
                                    <h4>Experiences</h4>
                                    <p>School of Rock offers many opportunities to showcase skills both on and off stage. From teaching a small group in the class, to performing with that small on stage in front of a live audience, we do what it takes to ensure students get hands on experience</p>
                                </div>
                            </div>
                        </div>
                    </div><!-- End .content-->
                </div>
            </div>

        </div>
    </section><!-- End Why Us Section -->
    <!-- ======= Popular Courses Section ======= -->
    <section id="popular-courses" class="courses">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Courses</h2>
                <p>Learn More</p>
            </div>

            <div class="row" data-aos="zoom-in" data-aos-delay="100">

                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="course-item">
                        <img src="~/assets/img/mixtape.jpg" class="img-fluid" alt="...">
                        <div class="course-content">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4></h4>
                                <p class="price">Starting at $126</p>
                            </div>

                            <h3><a asp-action="CourseAbout" asp-controller="Home">Course Details</a></h3>
                            <p>Learn about the courses offered this semester</p>

                        </div>
                    </div>
                </div> <!-- End Course Item-->

            </div> <!--End Course Item -->

        </div>

        </div>
    </section><!-- End Popular Courses Section -->
    <!-- ======= Trainers Section ======= -->
    <section id="trainers" class="trainers">
        <div class="container" data-aos="fade-up">

            <div class="row" data-aos="zoom-in" data-aos-delay="100">
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="member">
                        <img src="~/assets/img/trainers/Herring.jpg" class="img-fluid" alt="">
                        <div class="member-content">
                            <h4>Aline Herring</h4>
                            <span>Music Theory 101</span>
                            <p>
                                "Professor Herring was awesome! She made even the hardest concepts seem so easy to learn, and was always finding a new way to explain something." <br> - Previous Student
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="member">
                        <img src="~/assets/img/trainers/Parks.jpg" class="img-fluid" alt="">
                        <div class="member-content">
                            <h4>Teri Parks</h4>
                            <span>Applied Music</span>
                            <p>
                                "Professor Parks brought the perfect amount of humor and facts to class each day, she made learning fun"
                                <br>- Previous student
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="member">
                        <img src="~/assets/img/trainers/Nelson.jpg" class="img-fluid" alt="">
                        <div class="member-content">
                            <h4>Oliver Nelson</h4>
                            <span>Ensembles</span>
                            <p>
                                "I never got to teach another person my age until this class, it really brought me out of my shell. Thank you Professor Nelson!" <br> - Previous Student
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="member">
                        <img src="~/assets/img/trainers/Sosa.jpg" class="img-fluid" alt="">
                        <div class="member-content">
                            <h4>Dan Sosa</h4>
                            <span>Concert</span>
                            <p>
                                "I really got to hone in on my vocal skills with Professor Sosa during and after class time! He's an amazing coach" <br> - Previous Student
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="member">
                        <img src="~/assets/img/trainers/Jarvis.jpg" class="img-fluid" alt="">
                        <div class="member-content">
                            <h4>Walton Jarvis</h4>
                            <span>Orchestra</span>
                            <p>
                                "Getting to perform on stage in front of what felt like a whole city was really nerve-racking, but Professor Jarvis got us all through!" <br> - Previous Student
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section><!-- End Trainers Section -->

</main><!-- End #main -->